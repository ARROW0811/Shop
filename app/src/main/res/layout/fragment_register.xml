<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.RegisterFragment">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/no_bar_back"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/app_cname"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/ll_user_login"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <!--android:layout_gravity="center_horizontal"失效？？-->
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@color/et_grey"
            app:layout_constraintBottom_toBottomOf="@id/tv_app_name">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="20dp"
                android:text="@string/username"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_toEndOf="@+id/tv_username"
                android:background="@drawable/edittext"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/login_edittext_hint"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/et_grey"
            app:layout_constraintBottom_toBottomOf="@id/tv_app_name">

            <TextView
                android:id="@+id/tv_school"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="20dp"
                android:text="@string/school"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_school"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_toEndOf="@+id/tv_school"
                android:background="@drawable/edittext"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/login_edittext_hint"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/et_grey"
            app:layout_constraintBottom_toBottomOf="@id/tv_app_name">

            <TextView
                android:id="@+id/tv_studentNumber"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="20dp"
                android:text="@string/studentNumber"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_studentNumber"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_toEndOf="@+id/tv_studentNumber"
                android:background="@drawable/edittext"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/login_edittext_hint"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/et_grey"
            app:layout_constraintBottom_toBottomOf="@id/tv_app_name">

            <TextView
                android:id="@+id/tv_phoneNumber"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="20dp"
                android:text="@string/phoneNumber"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/et_phoneNumber"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_toEndOf="@+id/tv_phoneNumber"
                android:background="@drawable/edittext"
                android:paddingLeft="15dp"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/login_edittext_hint"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/et_grey"
            app:layout_constraintBottom_toBottomOf="@id/tv_app_name">

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="20dp"
                android:text="@string/password"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_toEndOf="@+id/tv_password"
                android:background="@drawable/edittext"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/login_edittext_hint"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/bt_gologin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button"
        android:text="@string/register"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/ll_user_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>